<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar fixed-top  navbar-dark pink " style="background-color: cornflowerblue">
            <a class="navbar-brand" href="#"><strong>Twitter CRUD Operations</strong></a>
        </nav>
        <li class="nav-item">
            <a class="nav-link"><i class="fab fa-twitter"></i></a>
        </li>

    </header>
    <div class="fluid">
        <div class=" row  ">

            <div class=" col-lg-3  jumbotron card" style="width:400px ">
                <h2>Find Tweets</h2>

                <div class="card-body">
                    <form action="getTweets" , method="post">
                        <div class="form-group">
                            <label for="twitterHandle">Enter TwitterHandle </label>
                            <input type="text" class="form-control" placeholder="Enter TwitterHandle.."
                                id="twitterHandle" name="twitterHandle">
                        </div>
                        <div class="form-group">
                            <label for="count">Count</label>
                            <input type="number" name="count" class="form-control" placeholder="Enter Count" id="count">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
            <div class=" col-lg-3">
                {{#if tweetResult}}
                <h2>Tweets are </h2>
                {{#each tweetResult}}
                <div>
                    <p>{{tweet}}</p>
                    <p>{{date}}</p>
                </div>
                {{/each}}
                {{/if}}
            </div>
            <div class=" col-lg-3 jumbotron float-right  card" style="width:400px  ">
                <h2>Post A Tweet</h2>
                <div class="card-body">
                    <form action="postTweet" , method="post">
                        <div class="form-group">
                            <label for="twitterHandle">Write here... </label>
                            <textarea class="form-control" rows="5" placeholder="Enter TwitterHandle.." name="tweetText"
                                id="tweetText">
                            </textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>


            </div>
            <div class=" col-lg-3 jumbotron float-right  card" style="width:400px  ">
                <h2>Delete A Tweet</h2>
                <div class="card-body">
                    <form action="deleteTweet" , method="post">
                        <div class="form-group">
                            <label for="twitterHandle">Write here... </label>
                            <textarea class="form-control" rows="5" placeholder="Enter TwitterHandle.." name="tweetId"
                                id="tweetText">
                            </textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>


            </div>
        </div>
    </div>
</body>
