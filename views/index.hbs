<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <header>
        <nav class="navbar fixed-top  navbar-dark  " style="background-color: cornflowerblue">
            <a class="navbar-brand" href="#">
                <span class="fa-stack  fa-inverse  fa-md">
                    <i class="fa fa-square-o fa-inverse  fa-stack-2x"></i>
                    <i class="fa fa-twitter fa-inverse  fa-stack-1x"></i>
                </span>
                <strong>Twitter CRUD Operations</strong>
            </a>

        </nav>

    </header>
    <div class=" block pt-5 mt-5">
        {{#if message}}
        <div class=" alert {{className}}">
            <p>{{messageText}}</p>

        </div>
        {{/if}}
        <div class=" row  ">

            <div class=" col-lg-3  jumbotron card" style="width:400px ;display:inline;">
                <h2>Find Tweets</h2>
                <div class="card-body">
                    <form action="getTweets" , method="post">
                        <div class="form-group">
                            <label for="twitterHandle">Enter TwitterHandle </label>
                            <input type="text" class="form-control" placeholder="Enter TwitterHandle.."
                                id="twitterHandle" name="twitterHandle">
                        </div>
                        <div class="form-group">
                            <label for="count">Count</label>
                            <input type="number" name="count" class="form-control" placeholder="Enter Count" id="count">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class=" col-lg-6  " , style="display:inline;">
                {{#if tweetResult}}
                <h2 class="text-center">Tweets of {{tweetResult.[1].user}} </h2>

                <table class=" table " style="table-layout:fixed; ">
                    {{#each tweetResult}}
                    <tbody>
                        <tr>
                            <td>{{tweet}}</td>

                            <td>
                                <i class="fa fa-trash  float-right tweetId" name="tweetId" value={{str_id}}
                                    id="tweetId"></i>
                            </td>

                        </tr>
                        <br />
                        <br />

                    </tbody>
                </table>

                {{/each}}
                {{/if}}
            </div>
            <div class="col-lg-3  pt-5  jumbotron card" style="width:400px  ">
                <h2>Post A Tweet</h2>
                <div class="card-body">
                    <form action="postTweet" , method="post">
                        <div class="form-group">
                            <label for="twitterHandle">Write here... </label>
                            <textarea class="form-control" rows="5" placeholder="Enter TwitterHandle.." name="tweetText"
                                id="tweetText">
                            </textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('#tweetId').on('click', function (e) {
            var value = $(this).attr('value');
            console.log("value", value);

            $.post('deleteTweet', { tweetId: value },
                function (res) {
                    // window.location.href = res.redirect;
                    console.log(res);
                });
        })
    })




</script>